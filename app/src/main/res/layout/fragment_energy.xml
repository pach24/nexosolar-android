<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/empty_energy_padding_top"
    android:paddingHorizontal="@dimen/empty_energy_padding_horizontal">

    <ImageView
        android:id="@+id/imgGears"
        android:layout_width="@dimen/empty_energy_image_size"
        android:layout_height="@dimen/empty_energy_image_size"
        android:src="@drawable/plan_gestiones"
        android:scaleType="fitCenter"
        android:contentDescription="@string/trabajo_en_progreso"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="@dimen/empty_energy_text_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_energy_space_between"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/desc_energy_fragment"
        android:textColor="@color/empty_energy_text_color"
        android:textSize="@dimen/empty_energy_text_size"
        app:layout_constraintTop_toBottomOf="@id/imgGears"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
