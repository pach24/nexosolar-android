<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ui.main.MainActivity">

    <!-- 1. FONDO ABSTRACTO -->
    <ImageView
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_header_height"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/bg_header_abstract"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. AVATAR -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/containerAvatar"
        android:layout_width="@dimen/main_avatar_container_size"
        android:layout_height="@dimen/main_avatar_container_size"
        android:layout_marginTop="@dimen/main_avatar_margin_top"
        android:layout_marginEnd="@dimen/main_avatar_margin_end"
        app:cardCornerRadius="@dimen/main_avatar_corner_radius"
        app:cardElevation="@dimen/main_avatar_elevation"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="@dimen/spacing_zero"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/main_avatar_icon_size"
            android:layout_height="@dimen/main_avatar_icon_size"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/ic_user_outline"
            app:tint="@color/my_theme_green_light" />
    </com.google.android.material.card.MaterialCardView>

    <!-- SWITCH SERVIDOR (IZQUIERDA) -->

    <TextView
        android:id="@+id/tvUrlLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="URL 1/ URL 2\n"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/containerAvatar"
        app:layout_constraintEnd_toStartOf="@id/switchAltUrl"
        app:layout_constraintTop_toTopOf="@id/containerAvatar"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchAltUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:enabled="false"
        android:alpha="0.5"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/selector_thumb_color"
        app:useMaterialThemeColors="false"
        android:text=" "
        app:showText="false"
        android:textOn=" "
        android:textOff=" "
        app:layout_constraintEnd_toStartOf="@id/tvRetromockLabel"
        app:layout_constraintTop_toTopOf="@id/containerAvatar"
        app:layout_constraintBottom_toBottomOf="@id/containerAvatar"
        app:layout_constraintVertical_bias="0.5" />

    <!-- SWITCH RETROMOCK (DERECHA) -->
    <TextView
        android:id="@+id/tvRetromockLabel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/retromock"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="11sp"
        android:layout_marginEnd="6dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toStartOf="@id/btToggleApi"
        app:layout_constraintTop_toTopOf="@id/containerAvatar"
        app:layout_constraintBottom_toBottomOf="@id/containerAvatar" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/btToggleApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:thumbTint="@color/switch_thumb_color"
        app:trackTint="@color/selector_thumb_color"
        app:useMaterialThemeColors="false"
        android:text=" "
        app:showText="false"
        android:textOn=" "
        android:textOff=" "
        app:layout_constraintEnd_toStartOf="@id/containerAvatar"
        app:layout_constraintTop_toTopOf="@id/containerAvatar"
        app:layout_constraintBottom_toBottomOf="@id/containerAvatar"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginEnd="@dimen/main_avatar_margin_end" />

    <!-- 4. SALUDO -->
    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_greeting_margin_top"
        android:layout_marginStart="@dimen/main_greeting_margin_start"
        android:textSize="@dimen/main_greeting_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/containerAvatar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 5. DIRECCIÓN -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_address_margin_top"
        android:layout_marginEnd="@dimen/main_address_margin_end"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/avenida_de_la_constituci_n_45"
        android:textColor="@color/darker_gray"
        android:textSize="@dimen/main_address_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting" />

    <!-- TÍTULO SECCIÓN -->
    <TextView
        android:id="@+id/tvSectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_section_title_margin_top"
        android:text="@string/mi_energ_a"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/main_section_title_text_size"
        app:layout_constraintStart_toStartOf="@id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvAddress" />

    <!-- 6. TARJETA FACTURAS -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFacturas"
        android:layout_width="@dimen/main_action_card_width"
        android:layout_height="@dimen/main_action_card_height"
        android:layout_marginTop="@dimen/main_action_card_margin_top"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/main_action_card_corner_radius"
        app:cardElevation="@dimen/main_action_card_elevation"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/card_border"
        app:strokeWidth="@dimen/main_action_card_stroke_width"
        app:layout_constraintStart_toStartOf="@id/tvSectionTitle"
        app:layout_constraintTop_toBottomOf="@id/tvSectionTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/main_action_card_padding">

            <ImageView
                android:id="@+id/ivFacturas"
                android:layout_width="@dimen/main_action_icon_size"
                android:layout_height="@dimen/main_action_icon_size"
                android:contentDescription="@null"
                android:src="@drawable/ic_lightbulb_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvFacturasTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ver_nconsumo"
                android:textSize="@dimen/main_action_title_text_size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:letterSpacing="-0.02"
                android:lines="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvFacturasSubtitle" />

            <TextView
                android:id="@+id/tvFacturasSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/hist_rico"
                android:textSize="@dimen/main_action_subtitle_text_size"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="@dimen/main_action_subtitle_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 7. TARJETA SMART SOLAR -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSmartSolar"
        android:layout_width="@dimen/main_action_card_width"
        android:layout_height="@dimen/main_action_card_height"
        android:layout_marginStart="@dimen/main_action_card_margin_start"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/main_action_card_corner_radius"
        app:cardElevation="@dimen/main_action_card_elevation"
        app:cardBackgroundColor="@color/white"
        app:strokeColor="@color/card_border"
        app:strokeWidth="@dimen/main_action_card_stroke_width"
        app:layout_constraintStart_toEndOf="@id/cardFacturas"
        app:layout_constraintTop_toTopOf="@id/cardFacturas">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/main_action_card_padding">

            <ImageView
                android:id="@+id/ivSmartSolar"
                android:layout_width="@dimen/main_action_icon_size"
                android:layout_height="@dimen/main_action_icon_size"
                android:contentDescription="@null"
                android:src="@drawable/twotone_doc_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvSmartSolarTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/smart_nsolar"
                android:textSize="@dimen/main_action_title_text_size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:letterSpacing="-0.02"
                android:lines="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvSmartSolarSubtitle" />

            <TextView
                android:id="@+id/tvSmartSolarSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/paneles"
                android:textSize="@dimen/main_action_subtitle_text_size"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="@dimen/main_action_subtitle_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
